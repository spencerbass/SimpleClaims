$C = "../Common.ui";
Group {
  LayoutMode: Left;
  Anchor: ( Height: 30, Bottom: 5);
  FlexWeight: 1;
  Background: $C.@InputBoxBackground;
  Padding: (Top: 4, Bottom: 4);

  Label #PartyName {
    Style: (
      FontSize: 16,
      RenderBold: true,
      TextColor: #ffffff
    );
    Anchor: (Left: 10, Vertical: 0);
    Padding: (Right: 5);
  }


  Label {
    FlexWeight: 1;
  }

  $C.@SecondaryTextButton #UsePartyButton {
    Anchor: (Right: 10, Vertical: 0);
    Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
    Text: "Admin";
    Overscroll: false;
  }

  $C.@SecondaryTextButton #EditPartyButton {
    Anchor: (Width: 60, Right: 10, Vertical: 0);
    Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
    Text: "Edit";
    Overscroll: false;
  }
  $C.@CancelTextButton #RemovePartyButton {
      Anchor: (Right: 10, Vertical: 0);
      Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
      Text: "Delete";
      Overscroll: false;
    }
}